                    brandName="Sam" originCode="26" typeID="1" />
                </FXCollections>
            </items>-->
            <sortOrder>
                <fx:reference source="formID"/>
            </sortOrder>
        </TableView>
        <Label fx:id="pageLabel" layoutX="253.0" layoutY="14.0" text="Search Results" />
      <Button fx:id="gen_csv" layoutX="469.0" layoutY="9.0" mnemonicParsing="false" text="Generate CSV" onMouseClicked="#saveCSV"/>
    </children>
</AnchorPane>
